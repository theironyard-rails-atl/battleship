.row
  .col-md-3
  .col-md-6
    .panel.panel-default
      .panel-heading
        %h3.panel-title Start New Game
      .panel-body
        %form.input-group{ :method => "get", :action => "http://#{request.host}:#{request.port}/setup"}
          %input.form-control{ :type => "text", :name => "name", :placeholder => "Your name", :autofocus => 'autofocus'}
          %span.input-group-btn
            %button.btn.btn-default{ :type => "submit" }Play!
  .col-md-3





